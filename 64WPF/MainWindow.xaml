<Window x:Class="_64WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_64WPF"
        mc:Ignorable="d"
        Title="64 The Game" Height="800" Width="800" Background="BlanchedAlmond">
    <Grid>
        <Grid Margin="40" Background="White" >
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!--Bordes primera fila-->
            <Border BorderBrush="Black" BorderThickness="3" Grid.Column="0" HorizontalAlignment="Left" Height="173" Grid.RowSpan="2" VerticalAlignment="Top" Width="177"/>
            <Border BorderBrush="Black" BorderThickness="3" Grid.Column="1" HorizontalAlignment="Left" Height="173" Margin="0" VerticalAlignment="Top" Width="180" Grid.ColumnSpan="3" Grid.RowSpan="2"/>
            <Border BorderBrush="Black" BorderThickness="3" Grid.Column="2" HorizontalAlignment="Left" Height="173" Margin="0" VerticalAlignment="Top" Width="178" Grid.RowSpan="2"/>
            <Border BorderBrush="Black" BorderThickness="3" Grid.Column="3" HorizontalAlignment="Left" Height="173" Margin="0" VerticalAlignment="Top" Width="178" Grid.RowSpan="2"/>
            <!--Bordes segunda fila-->
            <Border BorderBrush="Black" BorderThickness="3" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Height="173" Grid.RowSpan="2" VerticalAlignment="Top" Width="177"/>
            <Border BorderBrush="Black" BorderThickness="3" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Height="173" Margin="0" VerticalAlignment="Top" Width="180" Grid.ColumnSpan="3" Grid.RowSpan="2"/>
            <Border BorderBrush="Black" BorderThickness="3" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" Height="173" Margin="0" VerticalAlignment="Top" Width="178" Grid.RowSpan="2"/>
            <Border BorderBrush="Black" BorderThickness="3" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Left" Height="173" Margin="0" VerticalAlignment="Top" Width="178" Grid.RowSpan="2"/>
            <!--Bordes tercera fila-->
            <Border BorderBrush="Black" BorderThickness="3" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left"  Grid.RowSpan="2" VerticalAlignment="Top" />
            <Border BorderBrush="Black" BorderThickness="3" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Height="173" Margin="0" VerticalAlignment="Top" Width="180" Grid.ColumnSpan="3" Grid.RowSpan="2"/>
            <Border BorderBrush="Black" BorderThickness="3" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" Height="173" Margin="0" VerticalAlignment="Top" Width="178" Grid.RowSpan="2"/>
            <Border BorderBrush="Black" BorderThickness="3" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Left" Height="173" Margin="0" VerticalAlignment="Top" Width="178" Grid.RowSpan="2"/>
            <!--Bordes Cuarta fila-->
            <Border BorderBrush="Black" BorderThickness="3" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left" Height="173" Grid.RowSpan="2" VerticalAlignment="Top" Width="177"/>
            <Border BorderBrush="Black" BorderThickness="3" Grid.Row="3" Grid.Column="1"  HorizontalAlignment="Left" Height="173" Margin="0" VerticalAlignment="Top" Width="180" Grid.ColumnSpan="3" Grid.RowSpan="2"/>
            <Border BorderBrush="Black" BorderThickness="3" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Left" Height="173" Margin="0" VerticalAlignment="Top" Width="178" Grid.RowSpan="2"/>
            <Border BorderBrush="Black" BorderThickness="3" Grid.Row="3" Grid.Column="3" HorizontalAlignment="Left" Height="173" Margin="0" VerticalAlignment="Top" Width="178" Grid.RowSpan="2"/>

        </Grid>
    </Grid>
</Window>
